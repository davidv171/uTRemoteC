<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent">

    <EditTextPreference
        android:key="zPort"
        android:title="Vpišite zunanji port"
        android:defaultValue="8080"
        android:summary="Vpišite port, preko katerega se povežete, ko se povezujete na zunanje naprave" />
    <EditTextPreference
        android:key="nPort"
        android:title="Vpišite notranji port port"
        android:defaultValue="32610" />
    <SwitchPreference
        android:defaultValue="true"
        android:title="Shrani uporabniško ime"
        android:key="sUname"
        android:summary="Ali želite ohraniti vrednost uporabniškega imena?" />
    <SwitchPreference
        android:defaultValue="false"
        android:title="Shrani geslo"
        android:key="sPassword" />
    <SwitchPreference
        android:defaultValue="true"
        android:title="Shrani IP naslov"
        android:key="sIP" />
</PreferenceScreen>